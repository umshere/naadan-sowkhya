{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "products"
    ],
    "properties": {
        "products": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "name",
                    "slug",
                    "category",
                    "image",
                    "price",
                    "currency",
                    "description",
                    "benefits",
                    "ingredients",
                    "whatsappLink"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "pattern": "^[a-z0-9-]+$"
                    },
                    "name": {
                        "type": "string",
                        "minLength": 1
                    },
                    "slug": {
                        "type": "string",
                        "pattern": "^[a-z0-9-]+$"
                    },
                    "category": {
                        "type": "string",
                        "pattern": "^[a-z-\\s]+$"
                    },
                    "image": {
                        "type": "string",
                        "pattern": "^/images/products/.+\\.(jpg|jpeg|png|svg)$"
                    },
                    "price": {
                        "type": "string",
                        "pattern": "^[0-9]+$"
                    },
                    "currency": {
                        "type": "string",
                        "enum": [
                            "Rs"
                        ]
                    },
                    "description": {
                        "type": "string",
                        "minLength": 1
                    },
                    "benefits": {
                        "type": "string"
                    },
                    "ingredients": {
                        "type": "string"
                    },
                    "whatsappLink": {
                        "type": "string",
                        "pattern": "^https://wa\\.me/[0-9]+\\?text=.+"
                    }
                },
                "additionalProperties": false
            }
        }
    },
    "additionalProperties": false
}